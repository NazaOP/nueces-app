// prisma/schema.prisma

// Este es tu esquema de base de datos, con campos para el token de recuperación
// y su fecha de expiración.

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Usuario {
  id               Int      @id @default(autoincrement())
  email            String   @unique
  password         String
  resetToken       String?
  resetTokenExpiry DateTime?
}